ults}<tr><td>                    <div>                        <span width="100%" colspan="2">                            <i class="fas fa-sticky-note"></i> {$note_results[nr].note_date} - <strong>{$note_results[nr].note_subject}</strong>                        </span>                    </div>                    {if isset($note_results[nr].draw_image) && $note_results[nr].note_image_location == '0'}                    <div>                        <span width="100%" colspan="2">{$note_results[nr].draw_image}</span>                    </div>                    {/if}                    <div>                        <span width="100%" colspan="2">{$note_results[nr].note_content}</span>                    </div>                    {if isset($note_results[nr].draw_image) && $note_results[nr].note_image_location == '1'}                    <div>                        <span width="100%" colspan="2">{$note_results[nr].draw_image}</span>                    </div>                    {/if}</td></tr>                {sectionelse}                {/section}                </table>            </div>        </div>    </div>